// Prisma Schema - Base Template
// このファイルからschema.prismaが生成されます
// 直接編集せず、npm run db:setup を使用してください

generator client {
  provider = "prisma-client-js"
}

// __DATASOURCE_PLACEHOLDER__

// ============================================
// ユーザー・認証
// ============================================

model User {
  id          String          @id @default(cuid())
  token       String          @unique
  nickname    String
  createdAt   DateTime        @default(now())
  ownedGroups Group[]         @relation("GroupOwner")
  groups      UserGroup[]
  predictions Prediction[]
}

// ============================================
// グループ機能
// ============================================

model Group {
  id          String       @id @default(cuid())
  name        String
  inviteCode  String       @unique
  ownerId     String
  createdAt   DateTime     @default(now())
  owner       User         @relation("GroupOwner", fields: [ownerId], references: [id])
  members     UserGroup[]
  predictions Prediction[]
}

model UserGroup {
  userId   String
  groupId  String
  joinedAt DateTime @default(now())
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  group    Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([userId, groupId])
}

// ============================================
// レース情報（外部データ）
// ============================================

model ExternalRace {
  id          String          @id @default(cuid())
  externalId  String          @unique
  date        String
  venue       String
  raceNumber  Int
  raceName    String
  postTime    String?
  distance    Int?
  surface     String?
  courseType  String?
  headCount   Int?
  status      String          @default("scheduled")
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  horses      ExternalHorse[]
  predictions Prediction[]
}

model ExternalHorse {
  id          Int          @id @default(autoincrement())
  raceId      String
  number      Int
  name        String
  jockeyName  String?
  trainerName String?
  weight      Int?
  weightDiff  Int?
  age         Int?
  sex         String?
  scratched   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  race        ExternalRace @relation(fields: [raceId], references: [id], onDelete: Cascade)

  @@unique([raceId, number])
}

// ============================================
// 予想
// ============================================

model Prediction {
  id        Int          @id @default(autoincrement())
  userId    String
  raceId    String
  groupId   String?
  honmei    Int?
  taikou    Int?
  tanana    Int?
  renka     String?
  ana       String?
  comment   String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  user  User         @relation(fields: [userId], references: [id])
  race  ExternalRace @relation(fields: [raceId], references: [id], onDelete: Cascade)
  group Group?       @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, raceId, groupId])
}
